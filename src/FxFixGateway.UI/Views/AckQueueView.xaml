<UserControl x:Class="FxFixGateway.UI.Views.AckQueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:FxFixGateway.UI.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:AckQueueViewModel}"
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Statistics Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                CornerRadius="4"
                Padding="16"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <!-- Pending -->
                <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                    <Border Background="#FFF9C4" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                        <TextBlock Text="{Binding PendingCount}" 
                                   FontWeight="Bold" 
                                   FontSize="16"/>
                    </Border>
                    <TextBlock Text="Pending" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Sent Today -->
                <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                    <Border Background="#C8E6C9" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                        <TextBlock Text="{Binding SentTodayCount}" 
                                   FontWeight="Bold" 
                                   FontSize="16"/>
                    </Border>
                    <TextBlock Text="Sent (today)" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Failed -->
                <StackPanel Orientation="Horizontal">
                    <Border Background="#FFCDD2" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                        <TextBlock Text="{Binding FailedCount}" 
                                   FontWeight="Bold" 
                                   FontSize="16"/>
                    </Border>
                    <TextBlock Text="Failed" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Filter and Actions -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filter -->
            <ComboBox Grid.Column="0"
                      ItemsSource="{Binding FilterOptions}"
                      SelectedItem="{Binding SelectedFilter}"
                      materialDesign:HintAssist.Hint="Filter"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Width="120"
                      Margin="0,0,16,0"/>

            <!-- Spacer -->
            <Border Grid.Column="1"/>

            <!-- Refresh Button -->
            <Button Grid.Column="2"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Refresh"
                    Margin="0,0,8,0"
                    Padding="8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" VerticalAlignment="Center"/>
                    <TextBlock Text="Refresh" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Retry Failed Button -->
            <Button Grid.Column="3"
                    Command="{Binding RetryFailedCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Retry all failed ACKs"
                    Padding="8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Replay" Width="18" Height="18" VerticalAlignment="Center"/>
                    <TextBlock Text="Retry Failed" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- ACK List -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Acks}"
                  SelectedItem="{Binding SelectedAck}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <!-- Status -->
                <DataGridTemplateColumn Header="Status" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Padding="6,3" 
                                    CornerRadius="3"
                                    HorizontalAlignment="Center"
                                    Background="{Binding StatusColor}">
                                <TextBlock Text="{Binding StatusText}" 
                                           FontWeight="SemiBold"
                                           FontSize="11"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- TradeReportID -->
                <DataGridTextColumn Header="TradeReportID" 
                                    Binding="{Binding TradeReportId}" 
                                    Width="140"/>

                <!-- InternID -->
                <DataGridTextColumn Header="InternID" 
                                    Binding="{Binding InternTradeId}" 
                                    Width="120"/>

                <!-- Created -->
                <DataGridTextColumn Header="Created" 
                                    Binding="{Binding CreatedFormatted}" 
                                    Width="100"/>

                <!-- Sent -->
                <DataGridTextColumn Header="Sent" 
                                    Binding="{Binding SentFormatted}" 
                                    Width="100"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StatusText}" Value="Pending">
                            <Setter Property="Background" Value="#FFFDE7"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusText}" Value="Failed">
                            <Setter Property="Background" Value="#FFEBEE"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Separator -->
        <GridSplitter Grid.Row="3" 
                      Height="6" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center"
                      Background="Transparent"
                      ShowsPreview="True"/>

        <!-- ACK Details Panel -->
        <Border Grid.Row="4" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,8,0,0">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Details -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ACK Details" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="TradeReportID:" Margin="0,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedAck.TradeReportId}" FontWeight="SemiBold" Margin="0,2"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Intern TradeID:" Margin="0,2"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedAck.InternTradeId}" FontWeight="SemiBold" Margin="0,2"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Created:" Margin="0,2"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedAck.CreatedUtc, StringFormat='yyyy-MM-dd HH:mm:ss'}" Margin="0,2"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" Margin="0,2"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,2">
                            <Run Text="{Binding SelectedAck.StatusText, Mode=OneWay}"/>
                            <Run Text="{Binding SelectedAck.WaitingTime, Mode=OneWay}" Foreground="Gray"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Bottom">
                    <Button Content="Send Now"
                            Command="{Binding SendNowCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#4CAF50"
                            Foreground="White"
                            Margin="0,0,8,0"
                            Padding="16,8"/>

                    <Button Content="Cancel ACK"
                            Command="{Binding CancelAckCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="5" 
              Background="#88FFFFFF"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                        IsIndeterminate="True"
                        Width="40" Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>